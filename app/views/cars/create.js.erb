var instance = M.Modal.getInstance($("#new-car"));
<% if @car.errors.any? %>
  <% @car.errors.full_messages.each do |msg| %>
    M.toast({html: "<%= msg %>", displayLength: 1500, classes: "red"});
  <% end %>
<% else %>
  $("tbody#cars-table").append("<%= j render(partial: 'car_row', car: @car) %>");
  instance.close();
  M.toast({
    html: "<%= t('general.successfullyCreated', model: Car.model_name.human) %>",
    displayLength: 1500,
    classes: 'green'
  });
<% end %>