
.row
  .col.s12.m6.l6.xl6.offset-l3.offset-xl3
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .card.z-depth-5
        .card-content
          .card-title.center-align Inicio de sesi√≥n
          .input-field
            = f.email_field :email, autofocus: true, autocomplete: "email", class:'validate'
            = f.label :email
          .input-field
            = f.password_field :password, autocomplete: "current-password", class:'validate'
            = f.label :password

          - if devise_mapping.rememberable?
            .input-field
              = f.check_box :remember_me
              = f.label :remember_me

          .input-field= f.submit "Log in", class: "btn btn-large btn-block"
        .card-action= render "devise/shared/links"
