- model_class = Owner
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @owner.name
  %dt
    %strong
      = model_class.human_attribute_name(:lastname)
      \:
  %dd= @owner.lastname
  %dt
    %strong
      = model_class.human_attribute_name(:phone)
      \:
  %dd= @owner.phone
  %dt
    %strong
      = model_class.human_attribute_name(:annexed_id)
      \:
  %dd= Annexed.find_by_id(@owner.annexed_id).name
= link_to t('.back', :default => t("helpers.links.back")),
  owners_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")),
  edit_owner_path(@owner), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")),
  owner_path(@owner),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger'                                                                                   
